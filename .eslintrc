{
  "plugins": ["wdio"],
  "extends": [
    "plugin:wdio/recommended",
    "eslint:recommended"
  ],
  "rules": {
    "wdio/await-expect": true,
    "wdio/no-debug": true,
    "wdio/no-pause": true
  },
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "env": {
    "es6": true,
    "mocha": true,
    "node": true
  }
}
